{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "express"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": [
        "src/config/*"
      ],
      "@integrations/*": [
        "src/integrations/*"
      ]
    }
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src/**/*", "**/*.ts", "**/*.js"],
  "exclude": [
    "../node_modules"
  ]
}